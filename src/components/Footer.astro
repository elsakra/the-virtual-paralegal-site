---
import siteData from '@/data/site.json';
const { footer, company, branding } = siteData;
---

<footer class="bg-charcoal-950 text-white relative">
  <!-- Accent line at top -->
  <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 via-primary-400 to-primary-500"></div>
  
  <!-- Newsletter Section -->
  {footer.newsletter && (
    <div class="border-b border-neutral-800/50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 py-20">
        <div class="max-w-xl">
          <h3 class="font-display text-3xl md:text-4xl text-white mb-5">
            {footer.newsletter.headline}
          </h3>
          <p class="text-neutral-400 mb-8 text-lg leading-relaxed">
            {footer.newsletter.description}
          </p>
          <form class="flex flex-col sm:flex-row gap-4">
            <input 
              type="email" 
              placeholder="Enter your email" 
              class="flex-1 px-5 py-4 bg-charcoal-900/80 border border-neutral-700/50 text-white placeholder-neutral-500 focus:outline-none focus:border-primary-500 focus:bg-charcoal-900 transition-all text-lg"
            />
            <button 
              type="submit"
              class="btn-primary px-8 py-4 bg-primary-500 text-white font-semibold hover:bg-primary-600 transition-all whitespace-nowrap"
            >
              Sign up
            </button>
          </form>
        </div>
      </div>
    </div>
  )}
  
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-5 gap-12 lg:gap-16">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="block mb-8">
          {branding?.logo?.startsWith('http') ? (
            <span class="inline-flex items-center rounded-md bg-white/95 px-4 py-2.5 shadow-lg">
              <img 
                src={branding.logo} 
                alt={company.name} 
                class="h-10 w-auto"
                onerror="this.style.display='none'"
              />
            </span>
          ) : (
            <span class="font-display text-2xl font-semibold text-white">
              {company.name}
            </span>
          )}
        </a>
        
        <p class="text-neutral-400 max-w-sm leading-relaxed mb-8">
          {company.tagline || company.description?.slice(0, 150)}
        </p>
        
        {/* Social Links */}
        {footer.socialLinks && (
          <div class="flex gap-3">
            {footer.socialLinks.linkedin && (
              <a href={footer.socialLinks.linkedin} class="w-11 h-11 rounded-full border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-white hover:border-primary-500 hover:bg-primary-500/10 transition-all" aria-label="LinkedIn">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {footer.socialLinks.twitter && (
              <a href={footer.socialLinks.twitter} class="w-11 h-11 rounded-full border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-white hover:border-primary-500 hover:bg-primary-500/10 transition-all" aria-label="Twitter">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            )}
            {footer.socialLinks.facebook && (
              <a href={footer.socialLinks.facebook} class="w-11 h-11 rounded-full border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-white hover:border-primary-500 hover:bg-primary-500/10 transition-all" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            )}
          </div>
        )}
      </div>
      
      <!-- Link Columns -->
      {footer.columns?.map((column) => (
        <div>
          <h4 class="text-xs font-semibold text-white uppercase tracking-[0.2em] mb-6 flex items-center gap-3">
            <span class="w-8 h-0.5 bg-primary-500/50"></span>
            {column.title}
          </h4>
          <ul class="space-y-4">
            {column.links.map((link) => (
              <li>
                <a href={link.href} class="text-neutral-400 hover:text-white hover:translate-x-1 transition-all inline-block">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Contact Info -->
    <div class="mt-20 pt-10 border-t border-neutral-800/50">
      <div class="flex flex-col lg:flex-row justify-between gap-10">
        <div class="flex flex-col sm:flex-row flex-wrap gap-x-10 gap-y-4 text-neutral-400">
          {company.address && (
            <address class="not-italic flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-500/60 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {typeof company.address === 'string' ? (
                <span>{company.address}</span>
              ) : (
                <span>
                  {company.address?.street && <>{company.address.street}, </>}
                  {company.address?.city}{company.address?.city && company.address?.state ? ', ' : ''}
                  {company.address?.state} {company.address?.zip}
                </span>
              )}
            </address>
          )}
          {company.phone && (
            <a href={`tel:${company.phone}`} class="hover:text-white transition-colors flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-500/60 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {company.phone}
            </a>
          )}
          {company.email && (
            <a href={`mailto:${company.email}`} class="hover:text-white transition-colors flex items-center gap-3">
              <svg class="w-5 h-5 text-primary-500/60 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {company.email}
            </a>
          )}
        </div>
        
        <p class="text-sm text-neutral-500">
          {footer.copyright}
        </p>
      </div>
    </div>
  </div>
</footer>
