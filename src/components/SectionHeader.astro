---
interface Props {
  headline: string;
  description?: string;
  centered?: boolean;
  class?: string;
}

const { headline, description, centered = true, class: className } = Astro.props;
---

<div class:list={[
  "max-w-4xl",
  centered && "mx-auto text-center",
  className
]}>
  <div class:list={[
    "inline-flex items-center gap-3 text-xs uppercase tracking-[0.28em] text-slate-500",
    centered ? "justify-center" : "justify-start"
  ]}>
    <span class="h-px w-10 bg-primary-500/70"></span>
    <span>Perspective</span>
  </div>
  <h2 class="mt-5 font-display text-4xl sm:text-5xl md:text-6xl font-semibold text-slate-900 tracking-tight leading-[1.05]">
    {headline}
  </h2>
  {description && (
    <p class="mt-6 text-lg sm:text-xl text-slate-600 leading-relaxed">
      {description}
    </p>
  )}
</div>
