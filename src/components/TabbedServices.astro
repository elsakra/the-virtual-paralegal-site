---
import { getCollection } from 'astro:content';

interface Props {
  headline?: string;
  practicesHeadline?: string;
  industriesHeadline?: string;
}

const { 
  headline = "Key Services",
  practicesHeadline = "Practices",
  industriesHeadline = "Industries"
} = Astro.props;

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Group into practices and industries (if tagged)
const practices = sortedServices.filter(s => !s.data.category || s.data.category === 'practice');
const industries = sortedServices.filter(s => s.data.category === 'industry');
---

<section class="bg-neutral-950 py-28 lg:py-36 relative overflow-hidden">
  <!-- Decorative gradient -->
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-primary-500/5 to-transparent pointer-events-none"></div>
  
  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
    <div class="mb-16" data-reveal>
      <span class="section-label text-neutral-500">Practice Areas</span>
      <h2 class="headline-lg text-4xl sm:text-5xl lg:text-6xl text-white mt-6">{headline}</h2>
    </div>
    
    <!-- Tab Buttons -->
    <div class="flex flex-wrap gap-4 mb-12" role="tablist" data-reveal>
      <button 
        type="button"
        class="tab-button px-8 py-3.5 text-sm font-semibold uppercase tracking-[0.15em] border-2 transition-all active"
        data-tab="practices"
        role="tab"
        aria-selected="true"
      >
        {practicesHeadline}
      </button>
      {industries.length > 0 && (
        <button 
          type="button"
          class="tab-button px-8 py-3.5 text-sm font-semibold uppercase tracking-[0.15em] border-2 transition-all"
          data-tab="industries"
          role="tab"
          aria-selected="false"
        >
          {industriesHeadline}
        </button>
      )}
    </div>
    
    <!-- Practices Tab -->
    <div class="tab-content" id="practices-tab" role="tabpanel">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5 lg:gap-6" data-reveal-stagger>
        {practices.map((service) => (
          <a 
            href={`/services/${service.slug}`}
            class="group relative flex items-center justify-between p-7 lg:p-8 bg-white/[0.03] border-l-4 border-l-transparent border border-white/10 hover:border-l-primary-500 hover:bg-white/[0.07] hover:-translate-y-1 transition-all"
          >
            <h3 class="font-display text-xl lg:text-2xl text-white group-hover:text-primary-400 transition-colors pr-4">
              {service.data.title}
            </h3>
            <div class="w-10 h-10 rounded-full bg-white/5 group-hover:bg-primary-500 flex items-center justify-center flex-shrink-0 transition-all">
              <svg class="w-5 h-5 text-neutral-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
    
    <!-- Industries Tab -->
    {industries.length > 0 && (
      <div class="tab-content hidden" id="industries-tab" role="tabpanel">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5 lg:gap-6">
          {industries.map((service) => (
            <a 
              href={`/services/${service.slug}`}
              class="group relative flex items-center justify-between p-7 lg:p-8 bg-white/[0.03] border-l-4 border-l-transparent border border-white/10 hover:border-l-primary-500 hover:bg-white/[0.07] hover:-translate-y-1 transition-all"
            >
              <h3 class="font-display text-xl lg:text-2xl text-white group-hover:text-primary-400 transition-colors pr-4">
                {service.data.title}
              </h3>
              <div class="w-10 h-10 rounded-full bg-white/5 group-hover:bg-primary-500 flex items-center justify-center flex-shrink-0 transition-all">
                <svg class="w-5 h-5 text-neutral-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    )}
    
    <!-- View All Links -->
    <div class="flex gap-6 mt-14" data-reveal>
      <a href="/services" class="inline-flex items-center gap-3 text-primary-400 font-semibold text-lg link-underline hover:gap-4 transition-all">
        View all practices
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .tab-button {
    color: #a3a3a3;
    border-color: rgba(255, 255, 255, 0.15);
    background: transparent;
  }

  .tab-button:hover {
    color: #ffffff;
    border-color: rgba(255, 255, 255, 0.4);
    background: rgba(255, 255, 255, 0.05);
  }

  .tab-button.active {
    color: #ffffff;
    border-color: var(--brand-primary, #1e3a5f);
    background: var(--brand-primary, #1e3a5f);
  }
</style>

<script>
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');
  
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tabId = button.getAttribute('data-tab');
      
      // Update buttons
      tabButtons.forEach(btn => {
        btn.classList.remove('active');
        btn.setAttribute('aria-selected', 'false');
      });
      button.classList.add('active');
      button.setAttribute('aria-selected', 'true');
      
      // Update content
      tabContents.forEach(content => {
        content.classList.add('hidden');
      });
      document.getElementById(`${tabId}-tab`)?.classList.remove('hidden');
    });
  });
</script>
