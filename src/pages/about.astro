---
import BaseLayout from '@/layouts/BaseLayout.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const team = await getCollection('team');
const sortedTeam = team.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections, company } = siteData;
---

<BaseLayout title="About Us" lightHero={true}>
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl sm:text-5xl font-bold text-slate-900">
          {sections.about?.headline || "About Us"}
        </h1>
        <p class="mt-6 text-xl text-slate-600 leading-relaxed">
          {company.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        {sections.about?.image && (
          <div class="relative">
            <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-xl">
              <img 
                src={sections.about.image} 
                alt="Our firm"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        )}
        <div>
          <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">Our Story</span>
          <h2 class="mt-2 font-display text-3xl sm:text-4xl font-bold text-slate-900">
            Built for decisive outcomes
          </h2>
          <p class="mt-6 text-lg text-slate-600 leading-relaxed">
            {sections.about?.content}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  {sections.about?.values && (
    <section class="py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline="Why Choose Us" 
          description="What sets our firm apart"
        />
        
        <div class="mt-16 grid md:grid-cols-3 gap-8">
          {sections.about.values.map((value, index) => (
            <div class="bg-white rounded-xl p-8 shadow-sm border border-slate-200">
              <div class="w-12 h-12 bg-primary-600 rounded-lg flex items-center justify-center mb-6">
                <span class="font-display text-xl font-bold text-white">
                  {index + 1}
                </span>
              </div>
              <h3 class="font-display text-xl font-bold text-slate-900">
                {value.title}
              </h3>
              <p class="mt-3 text-slate-600 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Team Section - Only show if team members exist -->
  {sortedTeam.length > 0 ? (
    <section id="team" class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline={sections.team?.headline || "Meet Our Attorneys"} 
          description={sections.team?.description}
        />
        
        <div class="mt-16 grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedTeam.map(async (member) => {
            const { Content } = await member.render();
            return (
              <div class="bg-slate-50 rounded-xl overflow-hidden">
                {member.data.image && (
                  <div class="aspect-[4/5] overflow-hidden">
                    <img 
                      src={member.data.image} 
                      alt={member.data.name}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                <div class="p-6">
                  <h3 class="font-display text-xl font-bold text-slate-900">
                    {member.data.name}
                  </h3>
                  <p class="text-primary-600 font-medium">{member.data.role}</p>
                  {member.data.practiceAreas && member.data.practiceAreas.length > 0 && (
                    <div class="mt-4">
                      <p class="text-sm font-medium text-slate-700 mb-2">Practice Areas:</p>
                      <div class="flex flex-wrap gap-2">
                        {member.data.practiceAreas.map((area) => (
                          <span class="text-xs bg-primary-100 text-primary-700 px-2 py-1 rounded">
                            {area}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  ) : null}

  <!-- CTA -->
  <section class="py-24 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to discuss your matter?
      </h2>
      <p class="mt-4 text-xl text-primary-200">
        Request a confidential consultation.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="white" size="lg">
          Request a Consultation
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
