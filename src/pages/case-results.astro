---
import BaseLayout from '@/layouts/BaseLayout.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const results = await getCollection('case-results');
const sortedResults = results.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { company } = siteData;
---

<BaseLayout title="Case Results" lightHero={true}>
  <section class="pt-32 pb-16 bg-gradient-to-b from-primary-50 to-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-4xl sm:text-5xl font-bold text-slate-900">
        Case Results
      </h1>
      <p class="mt-6 text-xl text-slate-600 leading-relaxed">
        Representative outcomes across our practice. Prior results do not guarantee a similar outcome.
      </p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeader
        headline="Selected matters"
        description="A snapshot of outcomes and resolutions. Details are generalized for confidentiality."
      />

      {sortedResults.length > 0 ? (
        <div class="mt-14 grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedResults.map((result) => (
            <a
              href={`/case-results/${result.slug}`}
              class="group block bg-slate-50 rounded-2xl p-8 hover:bg-white hover:shadow-lg transition-all border border-slate-100"
            >
              <p class="text-sm text-primary-700 font-semibold">
                {result.data.practiceArea}
              </p>
              <h2 class="mt-2 font-display text-xl font-bold text-slate-900 group-hover:text-primary-700 transition-colors">
                {result.data.title}
              </h2>
              <p class="mt-3 text-slate-600 text-sm leading-relaxed">
                {result.data.outcome}
              </p>
              {result.data.amount && (
                <p class="mt-4 text-slate-900 font-semibold">
                  {result.data.amount}
                </p>
              )}
              <p class="mt-6 text-primary-700 font-medium text-sm">
                View details â†’
              </p>
            </a>
          ))}
        </div>
      ) : (
        <div class="mt-10 rounded-2xl border border-slate-200 bg-slate-50 p-10 text-center">
          <p class="text-slate-600">
            No case results available yet.
          </p>
        </div>
      )}
    </div>
  </section>

  <section class="py-20 bg-primary-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to discuss your matter?
      </h2>
      <p class="mt-4 text-xl text-primary-200">
        Request a confidential consultation with {company.name}.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="white" size="lg">
          Request a Consultation
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>

