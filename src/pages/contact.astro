---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqs = await getCollection('faq');
const sortedFaqs = faqs.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).slice(0, 5);
const { sections, company } = siteData;
---

<BaseLayout title="Contact Us" lightHero={true}>
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl sm:text-5xl font-bold text-slate-900">
          {sections.contact?.headline || "Schedule Your Appointment"}
        </h1>
        {sections.contact?.description && (
          <p class="mt-6 text-xl text-slate-600 leading-relaxed">
            {sections.contact.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div class="bg-slate-50 rounded-2xl p-8 lg:p-12">
          <h2 class="font-display text-2xl font-bold text-slate-900 mb-2">
            Request a Consultation
          </h2>
          <p class="text-slate-600 mb-8">
            Share a few details and weâ€™ll follow up promptly. All inquiries are confidential.
          </p>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-slate-700 mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-slate-700 mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                  Email Address *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-slate-700 mb-2">
                  Phone Number *
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="reason" class="block text-sm font-medium text-slate-700 mb-2">
                Matter Type
              </label>
              <select 
                id="reason" 
                name="reason"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors bg-white"
              >
                <option value="">Select an option</option>
                <option value="litigation">Litigation / Dispute</option>
                <option value="corporate">Corporate / Transactions</option>
                <option value="employment">Employment</option>
                <option value="personal-injury">Personal Injury</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="preferredContact" class="block text-sm font-medium text-slate-700 mb-2">
                Preferred Contact Method
              </label>
              <select
                id="preferredContact"
                name="preferredContact"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors bg-white"
              >
                <option value="">Select an option</option>
                <option value="phone">Phone</option>
                <option value="email">Email</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
                Additional Notes
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-colors resize-none"
                placeholder="Any additional information you'd like us to know..."
              ></textarea>
            </div>
            
            <Button style="primary" size="lg" class="w-full">
              Request Consultation
            </Button>
            
            <p class="text-xs text-slate-500 text-center">
              By submitting this form, you agree to be contacted regarding your inquiry.
            </p>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="font-display text-2xl font-bold text-slate-900 mb-8">
            Other Ways to Reach Us
          </h2>
          
          <div class="space-y-6">
            <!-- Call Us -->
            <div class="flex gap-4 p-6 bg-slate-50 rounded-xl">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900">Call Us</h3>
                <a href={`tel:${company.phone}`} class="text-primary-600 font-medium hover:underline">
                  {company.phone}
                </a>
                <p class="text-sm text-slate-500 mt-1">Business hours</p>
              </div>
            </div>
            
            <!-- Email -->
            <div class="flex gap-4 p-6 bg-slate-50 rounded-xl">
              <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900">Email Us</h3>
                <a href={`mailto:${company.email}`} class="text-primary-600 font-medium hover:underline">
                  {company.email}
                </a>
                <p class="text-sm text-slate-500 mt-1">We'll respond within 24 hours</p>
              </div>
            </div>
            
            <!-- Location -->
            {company.address && (
              <div id="hours" class="flex gap-4 p-6 bg-slate-50 rounded-xl">
                <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900">Location</h3>
                  <address class="text-slate-600 not-italic text-sm mt-1">
                    {typeof company.address === 'string' ? (
                      <p>{company.address}</p>
                    ) : (
                      <>
                        {company.address?.street && <p>{company.address.street}</p>}
                        {(company.address?.city || company.address?.state || company.address?.zip) && (
                          <p>
                            {company.address?.city}{company.address?.city && company.address?.state ? ', ' : ''}
                            {company.address?.state} {company.address?.zip}
                          </p>
                        )}
                      </>
                    )}
                  </address>
                </div>
              </div>
            )}
            
            <!-- Hours -->
            {company.hours && (
              <div class="flex gap-4 p-6 bg-slate-50 rounded-xl">
                <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900">Office Hours</h3>
                  <div class="text-slate-600 text-sm mt-1 space-y-1">
                    {typeof company.hours === 'string' ? (
                      <p>{company.hours}</p>
                    ) : (
                      <>
                        {company.hours.monday && <p>Mon: {company.hours.monday}</p>}
                        {company.hours.tuesday && <p>Tue: {company.hours.tuesday}</p>}
                        {company.hours.wednesday && <p>Wed: {company.hours.wednesday}</p>}
                        {company.hours.thursday && <p>Thu: {company.hours.thursday}</p>}
                        {company.hours.friday && <p>Fri: {company.hours.friday}</p>}
                        {company.hours.saturday && <p>Sat: {company.hours.saturday}</p>}
                        {company.hours.sunday && <p>Sun: {company.hours.sunday}</p>}
                        {company.hours.note && <p class="mt-2 text-xs italic">{company.hours.note}</p>}
                      </>
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
          
          <!-- FAQ Preview -->
          {sortedFaqs.length > 0 && (
            <div class="mt-12">
              <h3 class="font-display text-xl font-bold text-slate-900 mb-6">
                Frequently Asked Questions
              </h3>
              <div class="space-y-4">
                {sortedFaqs.map(async (faq) => {
                  const { Content } = await faq.render();
                  return (
                    <details class="group bg-slate-50 rounded-xl">
                      <summary class="flex items-center justify-between cursor-pointer p-4 text-left">
                        <span class="font-medium text-slate-900 pr-4">
                          {faq.data.question}
                        </span>
                        <span class="flex-shrink-0">
                          <svg class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                          </svg>
                        </span>
                      </summary>
                      <div class="px-4 pb-4 text-slate-600 text-sm prose prose-sm">
                        <Content />
                      </div>
                    </details>
                  );
                })}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
