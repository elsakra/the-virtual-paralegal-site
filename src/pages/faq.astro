---
import BaseLayout from '@/layouts/BaseLayout.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqItems = await getCollection('faq');
const { company } = siteData;
---

<BaseLayout title={`FAQ - ${company.name}`} lightHero={true}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-b from-sky-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Frequently Asked Questions
      </h1>
      <p class="text-xl text-slate-600">
        Find answers to common questions about working with our firm, timelines, and next steps.
      </p>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {faqItems.length > 0 ? (
        <div class="space-y-4">
          {faqItems.map(async (faq, index) => {
            const { Content } = await faq.render();
            return (
              <details 
                class="group bg-white border border-slate-200 rounded-lg overflow-hidden shadow-sm"
                open={index === 0}
              >
                <summary class="flex items-center justify-between p-5 cursor-pointer list-none hover:bg-slate-50 transition-colors">
                  <h3 class="font-display text-lg font-semibold text-slate-900 pr-8">
                    {faq.data.question}
                  </h3>
                  <svg 
                    class="w-5 h-5 text-sky-600 flex-shrink-0 transition-transform group-open:rotate-180" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </summary>
                <div class="px-5 pb-5 border-t border-slate-100 prose prose-slate max-w-none pt-4">
                  <Content />
                </div>
              </details>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-slate-500">No FAQs available at this time.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16 bg-sky-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl font-bold text-slate-900 mb-4">
        Have More Questions?
      </h2>
      <p class="text-slate-600 mb-8 max-w-2xl mx-auto">
        Our team is here to help. Give us a call or send us a message.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href={`tel:${company.phone}`}
          class="inline-flex items-center justify-center gap-2 bg-sky-600 hover:bg-sky-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call Us
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center gap-2 bg-white hover:bg-slate-50 text-sky-600 border-2 border-sky-600 px-8 py-4 rounded-lg font-semibold transition-colors"
        >
          Contact Us
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
